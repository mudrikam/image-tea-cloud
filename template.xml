<?xml version="1.0" encoding="UTF-8"?>
<html xmlns='http://www.w3.org/1999/xhtml'
    xmlns:b='http://www.google.com/2005/gml/b'
    xmlns:data='http://www.google.com/2005/gml/data'
    xmlns:expr='http://www.google.com/2005/gml/expr'>
    <head>
        <meta content='IE=EmulateIE7' http-equiv='X-UA-Compatible' />
        <meta content='width=device-width,initial-scale=1.0' name='viewport' />
        <b:include data='blog' name='all-head-content' />
        <title>
            <data:blog.pageTitle />
        </title>

        <!-- Bootstrap 5.3 CSS -->
        <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
            crossorigin='anonymous' />

        <!-- Font Awesome 6 -->
        <link rel='stylesheet'
            href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
            integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
            crossorigin='anonymous' referrerpolicy='no-referrer' />
        <b:skin><![CDATA[
    body {
      font: $(body.font);
      color: $(body.text.color);
      background: $(body.background);
      margin: 0;
      padding: 0;
    }    /* Custom accent color */
    .bg-accent {
      background-color: #53a11b !important;
    }

    /* Navbar hover effect */
    .navbar-nav .nav-link:hover {
      opacity: 0.8;
    }

    /* Hilangkan link langganan Atom */
    .feed-links {
      display: none !important;
    }

    /* Hilangkan teks Beranda dan Tidak Ada Postingan */
    .blog-pager,
    .status-msg-wrap {
      display: none !important;
    }

    /* Hilangkan judul halaman statis */
    .post-title {
      display: none !important;
    }

    /* Theme switcher button styling */
    .theme-icon {
      display: none;
    }
    
    [data-bs-theme="light"] .theme-icon-light {
      display: inline-block;
    }
    
    [data-bs-theme="dark"] .theme-icon-dark {
      display: inline-block;
    }
    
    html:not([data-bs-theme]) .theme-icon-auto,
    [data-bs-theme="auto"] .theme-icon-auto {
      display: inline-block;
    }
  ]]></b:skin>
    </head>

    <body>  <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-accent py-2">
            <div class="container">
                <a class="navbar-brand fw-bold fs-5 py-1" href="https://www.image-tea.cloud/">
                    <img
                        src="https://mudrikam.github.io/image-tea-cloud/assets/icon/image_tea_logo_white.webp"
                        alt="Image Tea" class="me-2" style="height: 32px;" /> Image Tea </a>

                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#download">
                                <i class="fas fa-download me-1"></i>Download </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#dokumentasi">
                                <i class="fas fa-book me-1"></i>Dokumentasi </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#daftar-harga">
                                <i class="fas fa-tag me-1"></i>Daftar Harga </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white"
                                href="https://chat.whatsapp.com/CMQvDxpCfP647kBBA6dRn3"
                                target="_blank" rel="noopener">
                                <i class="fab fa-whatsapp me-1"></i>Grup WhatsApp </a>
                        </li>
                    </ul>
                    <div class="navbar-nav d-flex flex-row align-items-center gap-2">
                        <a class="nav-link text-white"
                            href="https://chat.whatsapp.com/CMQvDxpCfP647kBBA6dRn3" target="_blank"
                            rel="noopener" title="WhatsApp Group">
                            <i class="fab fa-whatsapp fa-lg"></i>
                        </a>
                        <a class="nav-link text-white"
                            href="https://github.com/mudrikam/image-tea-cloud" target="_blank"
                            rel="noopener" title="GitHub Repository">
                            <i class="fab fa-github fa-lg"></i>
                        </a>
                        <div class="nav-item dropdown">
                            <button class="btn btn-outline-light dropdown-toggle px-3 py-1 small"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-sun theme-icon theme-icon-light"></i>
                                <i class="fas fa-moon theme-icon theme-icon-dark"></i>
                                <i class="fas fa-circle-half-stroke theme-icon theme-icon-auto"></i>
                                <span class="d-lg-inline d-none">Theme</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <button class="dropdown-item" type="button"
                                        onclick="setTheme('light')">
                                        <i class="fas fa-sun me-2"></i>Light </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" type="button"
                                        onclick="setTheme('dark')">
                                        <i class="fas fa-moon me-2"></i>Dark </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" type="button"
                                        onclick="setTheme('auto')">
                                        <i class="fas fa-circle-half-stroke me-2"></i>Auto </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <b:section id='main' class='main' showaddelement='yes'>
            <b:widget id='Blog1' type='Blog' />
        </b:section>
        <!-- Bootstrap 5.3 JS Bundle -->
        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
            crossorigin='anonymous'></script>

        <!-- Image Tea Template Scripts -->
        <script src='https://mudrikam.github.io/image-tea-cloud/scripts/template.js'></script>
    </body>
</html>